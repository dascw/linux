#include "sun8i-h3-nanopi-neo-core.dtsi"

#include <dt-bindings/input/input.h>

/ {
	model = "Victron Energy Easysolar-Display";
	compatible = "friendlyarm,nanopi-neo-core", "allwinner,sun8i-h3";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
 	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	disp_keys {
		compatible = "gpio-keys";
		interrupt-parent = <&disp_gpio>;

		up {
			label = "UP";
			linux,code = <KEY_UP>;
			gpio = <&disp_gpio 12 GPIO_ACTIVE_LOW>;
			interrupts = <12 IRQ_TYPE_EDGE_RISING>;
		};

		left {
			label = "LEFT";
			linux,code = <KEY_LEFT>;
			gpio = <&disp_gpio 13 GPIO_ACTIVE_LOW>;
			interrupts = <13 IRQ_TYPE_EDGE_RISING>;
		};

		right {
			label = "RIGHT";
			linux,code = <KEY_RIGHT>;
			gpio = <&disp_gpio 14 GPIO_ACTIVE_LOW>;
			interrupts = <14 IRQ_TYPE_EDGE_RISING>;
		};

		down {
			label = "DOWN";
			linux,code = <KEY_DOWN>;
			gpio = <&disp_gpio 15 GPIO_ACTIVE_LOW>;
			interrupts = <15 IRQ_TYPE_EDGE_RISING>;
		};
	};

	backlight {
		pinctrl-names = "default";
		pinctrl-0 = <&backlight_pins>;
		compatible = "gpio-backlight";
		gpios = <&pio 0 6 GPIO_ACTIVE_HIGH>;
		default-on;
	};
};

&pio {
	disp_gpio_pins: disp_gpio {
		pins = "PG11";
		function = "gpio_in";
		bias-pull-up;
	};

	backlight_pins: backlight {
		pins = "PA6";
		function = "gpio_out";
	};
};

&r_pio {
	usb2_vbus_pins: usb2_vbus {
		pins = "PL11";
		function = "gpio_out";
	};
};

&ehci1 {
	#address-cells = <1>;
	#size-cells = <0>;

	wireless-controller@1 {
		compatible = "usbbda,b720";
		reg = <1>;
		removable = <0>;
	};
};

&ohci1 {
	status = "disabled";
};

&ehci3 {
	status = "disabled";
};

&reg_usb2_vbus {
	status = "okay";
	gpio = <&r_pio 0 11 GPIO_ACTIVE_HIGH>; // GPIOL11 / VUSB_ENABLE
	pinctrl-names = "default";
	pinctrl-0 = <&usb2_vbus_pins>;
};

&usbphy {
	usb2_vbus-supply = <&reg_usb2_vbus>;
};

&i2c0 {
	status = "okay";

	disp_gpio: gpio@20 {
		pinctrl-names = "default";
		pinctrl-0 = <&disp_gpio_pins>;
		compatible = "nxp,pca9555";
		reg = <0x20>;
		interrupt-parent = <&pio>;
		interrupts = <6 11 IRQ_TYPE_LEVEL_LOW>;
		gpio-controller;
		#gpio-cells = <2>;
		interrupt-controller;
		#interrupt-cells = <2>;
	};

	eeprom@50 {
		compatible = "atmel,24c02";
		reg = <0x50>;
		pagesize = <16>;
		read-only;
	};

	rtc1: pcf8523@68 {
		compatible = "nxp,pcf8523";
		status = "okay";
		reg = <0x68>;
	};
};

&rtc {
	status = "disabled";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
	status = "okay";
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins>;
	status = "okay";
};

